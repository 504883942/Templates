{
  "version": "1.0.0-rc2-final-0001",
  "title": "ASP.NET MVC 6 Boilerplate Framework",
  "description": "Provides boilerplate framework code for an ASP.NET MVC project. ASP.NET MVC Boilerplate is a professional template for building secure, fast, robust and adaptable web applications or sites. It provides the minimum amount of code required on top of the default MVC template provided by Microsoft. You can download the ASP.NET MVC Boilerplate project template on the Visual Studio Gallery or download the code on GitHub.",
  "copyright": "@ Muhammad Rehan Saeed. All rights Reserved",
  "authors": [ "Muhammad Rehan Saeed (RehanSaeed.com)" ],

  "packOptions": {
    "releaseNotes": "Added HttpRequestExtensions IsLocalRequest extension method.",
    "owners": [ "Muhammad Rehan Saeed (RehanSaeed.com)" ],
    "tags": [ "ASP.NET MVC MVC6 Boilerplate Muhammad Rehan Saeed Framework" ],
    "iconUrl": "https://raw.githubusercontent.com/RehanSaeed/ASP.NET-MVC-Boilerplate/master/Images/Icon.png",
    "projectUrl": "https://github.com/RehanSaeed/ASP.NET-MVC-Boilerplate",
    "licenseUrl": "https://github.com/RehanSaeed/ASP.NET-MVC-Boilerplate/blob/master/LICENSE",
    "repository": {
      "type": "git",
      "url": "https://github.com/RehanSaeed/ASP.NET-MVC-Boilerplate.git"
    },
    "requireLicenseAcceptance": true
  },

  "buildOptions": {
    "keyFile": "../../Key.snk",
    "warningsAsErrors": true,
    "xmlDoc": true
  },

  "dependencies": {
    "Microsoft.AspNetCore.Mvc.Abstractions": "1.0.0-rc2-final",
    "Microsoft.AspNetCore.Mvc.Core": "1.0.0-rc2-final",
    "Microsoft.Extensions.Caching.Abstractions": "1.0.0-rc2-final",
    "Newtonsoft.Json": "8.0.3"
  },

  "frameworks": {
    "netstandard1.5": {
      "dependencies": {
        "System.Xml.XDocument": "4.0.11-rc2-24027"
      },
      "imports": "dnxcore50"
    },
    "net461": {
      "frameworkAssemblies": {
        "System.ServiceModel": "",
        "System.Xml": "",
        "System.Xml.Linq": ""
      }
    }
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration Release"
    ]
  }
}